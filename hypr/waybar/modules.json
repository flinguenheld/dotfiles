{
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "all-outputs": false,
    "sort-by-number": true,
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "hyprland/submap": {
    "format": "- {} -",
    "max-length": 100,
    "tooltip": true
  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "us"
  },

  "clock": {
    "interval": 30,
    "format": "{: %A %d %B - %R }",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#f5e0dc'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "pulseaudio": {
    "format": "󰕾  {volume}",
    "format-muted": "󰖁",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%"
  },
  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "  {volume}",
    "format-source-muted": "",
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -5%",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +5%"
  },

  "custom/power": {
    "format": "⏻ ",
    "tooltip": false,
    "on-click": "archlinux-logout"
  },

  "custom/cycle_wall": {
    "format": "",
    "on-click": "~/.config/hypr/scripts/changeWallpaper.sh",
    "tooltip-format": "Change wallpaper"
  },

  "cpu": {
    "interval": 1,
    "format": "{usage:>2}% "
  },
  "memory": {
    "interval": 5,
    "format": "{percentage}% "
  },

  "custom/expressvpn": {
    "interval": 3,
    "format": "{}",
    "exec": "~/.config/hypr/scripts/expressvpn.sh",
    "on-click": "expressvpn connect",
    "on-click-right": "expressvpn disconnect"
  },

  "custom/mail": {
    "interval": 10,
    "format": {},
    "exec": "~/.config/hypr/scripts/mail.py",
    "on-click": "thunderbird"
  },

  "tray": {
    "icon-size": 21,
    "spacing": 10
  }
}
